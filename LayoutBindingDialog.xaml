<Window x:Class="RainmeterLayoutManager.LayoutBindingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RainmeterLayoutManager.Helpers"
        mc:Ignorable="d"
        Title="Layout Binding Configuration" 
        Height="450" Width="550" 
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText" 
                   Text="Add Layout Binding" 
                   Margin="0,0,0,10"
                   Grid.Row="0"/>

        <!-- Configuration Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Display Fingerprint Section -->
                <GroupBox Header="Display Fingerprint" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Current display configuration:" 
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="FingerprintDisplay" 
                                   Text="Loading..." 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- Rainmeter Layout Selection -->
                <GroupBox Header="Rainmeter Layout" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Select the Rainmeter layout to load for this display configuration:" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        <DockPanel>
                            <Button x:Name="RefreshLayoutsButton" 
                                    Content="Refresh" 
                                    DockPanel.Dock="Right" 
                                    Click="RefreshLayoutsButton_Click" 
                                    Margin="8,0,0,0" 
                                    ToolTip="Refresh available layouts"/>
                            <ComboBox x:Name="LayoutComboBox"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Advanced Settings -->
                <Expander Header="Advanced Settings" 
                          IsExpanded="False" 
                          Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox Content="Restart Rainmeter after applying layout" Margin="0,4"/>
                        <!-- INI File Options -->
                        <GroupBox Header="Set INI Variables" Margin="0,10,0,0">
                            <StackPanel Margin="10">
                                <TextBlock Text="Set INI variables to the desired values after loading the layout." 
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,15"/>
                                
                                <!-- Selected Layout Display -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Layout: " FontWeight="Bold"/>
                                    <TextBlock x:Name="SelectedLayoutDisplay" 
                                               Text="(No layout selected)" 
                                               FontStyle="Italic"/>
                                </StackPanel>

                                <!-- Skins List -->
                                <ItemsControl x:Name="SkinsItemsControl" Margin="0,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander Header="{Binding SkinName}" 
                                                      IsExpanded="False"
                                                      Margin="0,4">
                                                <StackPanel Margin="10,5">
                                                    <!-- Variables List -->
                                                    <ItemsControl ItemsSource="{Binding Variables}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Margin="0,4">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="120"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="{Binding Key}" 
                                                                               VerticalAlignment="Center"
                                                                               Grid.Column="0"/>
                                                                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                                             local:TextBoxPlaceholderBehavior.Placeholder="{Binding PlaceholderText}"
                                                                             Grid.Column="1"
                                                                             Margin="8,0,0,0"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Expander>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="SaveButton" 
                    Content="Save" 
                    Click="SaveButton_Click" 
                    IsDefault="True"
                    Padding="10,3"
                    Margin="0,0,5,0"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Padding="10,3"
                    Click="CancelButton_Click" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
